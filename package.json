{
    "name": "sapphai-chat-bot",
    "version": "1.0.0",
    "description": "SapphAI - Intelligent Chat Bot with Gaming Vision - Universal Deployment",
    "main": "server.js",
    "type": "commonjs",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "docker:build": "docker build -t sapphai .",
        "docker:run": "docker run -p ${PORT:-3000}:${PORT:-3000} --env-file .env sapphai",
        "docker:compose": "docker-compose up",
        "render:deploy": "echo 'Connect to: https://render.com/deploy?repo=https://github.com/SachiSapph/SapphAi-Public'",
        "railway:deploy": "echo 'Connect to: https://railway.app/new/template?template=https://github.com/SachiSapph/SapphAi-Public'",
        "vercel:dev": "vercel dev",
        "vercel:deploy": "vercel --prod",
        "cloudflare:dev": "wrangler dev",
        "cloudflare:deploy": "wrangler deploy",
        "test": "echo \"No tests yet\" && exit 0",
        "lint": "eslint .",
        "format": "prettier --write ."
    },
    "keywords": [
        "ai",
        "chatbot",
        "gaming",
        "sapphai",
        "universal",
        "backend",
        "serverless",
        "docker"
    ],
    "author": "Solo-Dev",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "axios": "^1.6.0",
        "dotenv": "^16.3.1",
        "express-rate-limit": "^7.1.5"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "wrangler": "^3.0.0",
        "vercel": "^33.0.0",
        "eslint": "^8.0.0",
        "prettier": "^3.0.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "exports": {
        ".": "./server.js",
        "./serverless": "./serverless.js"
    },
    "files": [
        "src/",
        "config/",
        "public/",
        "server.js",
        "serverless.js",
        "Dockerfile",
        "render.yaml",
        "Procfile",
        "wrangler.toml",
        "vercel.json"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/SachiSapph/SapphAi-Public.git"
    },
    "homepage": "https://github.com/SachiSapph/SapphAi-Public#readme",
    "bugs": {
        "url": "https://github.com/SachiSapph/SapphAi-Public/issues"
    }
}